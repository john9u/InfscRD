@model infosecrd.Models.tblArticle

<div class="product-container">
    <div class="row">
        <div class="col-lg-12"><img class="img-fluid" href="@Url.Action("Noticia","Home",new {Id=Model.Id})" src="@Url.Content(Model.ImgPath)" /></div>
    </div>
    <div class="row">
        <div class="col">
            <p style="font-size: 18px">
                <a href="@Url.Action("Noticia","Home",new {Id=Model.Id})" style="color:black"><strong>@Model.Titulo</strong></a><br />
                <a class="small-text" href="#">@Model.Autor @Model.FechaCreacion</a>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <p class="product-description">@Model.Body.Substring(0, 300)...</p>
            <div class="row">
                <div class="col-lg-6 offset-lg-7">
                    <button class="btn btn-light" type="button" onclick="location.href='@Url.Action("Noticia","Home",new {Id=Model.Id})'">Leer mas</button>
                </div>
            </div>
        </div>
    </div>
</div>

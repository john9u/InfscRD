@model infosecrd.Models.tblArticle

<div class="article-clean">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 col-xl-8 offset-lg-1 offset-xl-2">
                <div class="intro">
                    <h1 class="text-center">@Model.Titulo</h1>
                    <p class="text-center"><span class="by">by</span> <a href="#">@Model.Autor</a><span class="date">@Model.FechaCreacion@*Sept 8th, 2016*@ </span></p><img class="img-fluid" src="@Url.Content(Model.ImgPath)">
                </div>
                <div class="text">
                    <p>
                        @Model.Body
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

